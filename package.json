{
  "name": "nodejs-task-manager",
  "version": "1.0.0",
  "description": "A task manager app using Node.js and MongoDB",
  "main": "es6-node-setup.js",
  "scripts": {
    "start": "node lib/app.js",
    "build": "npm run clean && babel src -d lib",
    "clean": "rm -rf lib",
    "dev": "NODE_ENV=dev nodemon --exec \"npm run build && npm start\" --ignore lib/ --ignore data/ --ignore playground/ -e js,hbs"
